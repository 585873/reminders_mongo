<h2>Reminders for {{name}}</h2>
<div>
  {{#each reminders}}
    <div class="reminders-show-each">
      <p>{{body}}</p>
      <form method="post" action="/authors/{{../_id}}/reminders/{{_id}}?_method=delete">
          <input type="submit" value="Done!">
      </form>
    </div>
  {{/each}}
</div>

<div id="reminder-new">
  <h3>New Reminder</h3>
  <form action="/authors/{{_id}}/reminders" method="post">
    <label>Body</label>
    <input type="text" name="body">
    <input type="submit">
  </form>
</div>


<div id="author-edit">
  <a href="/authors/{{_id}}/edit">Edit Author</a>
  <a href="/authors">Back</a>
</div>
